@model IEnumerable<Wardrobe_MVC.Models.Accessory>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Add Accessory", "Create")
</p>



@foreach (var item in Model)
{
    <div class="col-sm-6 col-md-3 col-lg-3">
        <div class="thumbnail">
            <div class="caption">
                <h3>@Html.DisplayFor(modelItem => item.AccessoryName)</h3>  @*For each Iteration Title Appears*@
                <img style="width: 230px; height: 230px;" src="@Html.DisplayFor(modelItem => item.AccessoryPhoto)" />

                @*<p><a href="#" class="btn btn-primary" role="button">Button</a> <a href="#" class="btn btn-default" role="button">Button</a></p>*@
                <p>
                    @Html.ActionLink("Edit", "Edit", new { id = item.AccessoryID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.AccessoryID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.AccessoryID })
                </p>
            </div>
        </div>
    </div>
}

